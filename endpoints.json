{
  "GET /api": {
    "description": "returns a json object containing details of each endpoint"
  },
  "GET /api/projects": {
    "description": "returns a paginated array of projects with details to populate the website portfolio list, and a total number of projects before pagination",
    "allowedQueries": ["language", "limit", "page", "sort_by", "order"],
    "exampleResponse": {
      "project_count": 1,
      "projects": [
        {
          "id": 1,
          "title": "Building A Website Backend",
          "img_url": "https://images.pexels.com/photos/1117452/pexels-photo-1117452.jpeg",
          "languages": [
            {
              "id": 1,
              "name": "JavaScript",
              "slug": "js",
              "icon_url": "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg"
            }
          ]
        }
      ]
    }
  },
  "GET /api/languages": {
    "description": "returns an array of programming languages used in projects, including a count of projects featuring each language and an icon URL",
    "exampleResponse": {
      "languages": [
        {
          "id": 1,
          "name": "JavaScript",
          "slug": "js",
          "icon_url": "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg",
          "project_count": 5
        }
      ]
    }
  },
  "GET /api/projects/:project_id": {
    "description": "returns details of a project",
    "exampleResponse": {
      "project": {
        "id": 1,
        "created_at": "",
        "title": "Building A Website Backend",
        "img_url": "https://images.pexels.com/photos/1117452/pexels-photo-1117452.jpeg",
        "video_url": "https://www.youtube.com/watch?v=jNQXAC9IVRw",
        "body": "This is a programming article. To build a backend api: seed a database, build a server, perform unit tests, host the database, host the server.",
        "languages": [
          {
            "id": 1,
            "name": "JavaScript",
            "slug": "js",
            "icon_url": "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg"
          }
        ]
      }
    }
  }
}
